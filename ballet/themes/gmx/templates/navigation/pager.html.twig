
{% if items %}
  <nav class="pager" role="navigation" aria-labelledby="pagination-heading">
    <h4 id="pagination-heading" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="pager__items js-pager__items">

          <a class="prev" href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
            <img src="/../themes/gmx/images/arrow-prev.png" /> 
          </a>

      {# Print next item if we are not on the last page. #}
      {% if items.next %}

          <a class="next" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <img src="/../themes/gmx/images/arrow-next.png" /> 
          </a>

      {% endif %}
      {# Print last item if we are not on the last page. #}


    </ul>
  </nav>


{% endif %}
